/* Sidebar Styles */
#side-nav {
  // background: url(<%= asset_path 'tagsnooper-landing-3.jpeg' %>) no-repeat center center;
  // background: rgba(0, 0, 0, 0) -webkit-linear-gradient(top left, rgba(10, 71, 102, 0.97) 40%, rgba(57, 128, 128, .6) 80%) repeat scroll 0 0;
  background-size: cover;
}
#side-nav .navbar-brand img {
  height: 40px;
}
#side-nav .navbar-brand {
  margin-bottom: 20px;
  border-bottom: 1px solid lightgrey;
}

.sidebar-nav {
    position: absolute;
    top: 0;
    width: 250px;
    margin: 0;
    padding: 0;
    list-style: none;
}

.sidebar-nav li {
    text-indent: 20px;
    line-height: 40px;
}

.sidebar-nav li a {
    display: block;
    text-decoration: none;
    color: #999999;
}

.sidebar-nav li a:hover {
    text-decoration: none;
    color: #fff;
    background: rgba(255,255,255,0.2);
}

.sidebar-nav li a:active,
.sidebar-nav li a:focus {
    text-decoration: none;
}

.sidebar-nav > .sidebar-brand {
    height: 65px;
    font-size: 18px;
    line-height: 60px;
}

.sidebar-nav > .sidebar-brand a {
    color: #999999;
}

.sidebar-nav > .sidebar-brand a:hover {
    color: #fff;
    background: none;
}
