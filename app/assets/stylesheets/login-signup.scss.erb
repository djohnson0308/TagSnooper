#login {
  height: 100%;
  background: url('<%= asset_path 'tagsnooper-landing-3.jpeg' %>') no-repeat center center;
  background-size: cover;
  &:before {
    content: '';
	position: absolute;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
  background: rgba(0, 0, 0, 0) -webkit-linear-gradient(top left, rgba(10, 71, 102, 0.95) 45%, rgba(57, 128, 128, .5) 80%) repeat scroll 0 0;
	opacity: 1;
  }
}
.login {
  background-color: rgba(255, 255, 255, .85);
  border-radius: 4px;
  box-shadow: 0 4px 6px rgba(50,50,93,.11), 0 1px 3px rgba(0,0,0,.08);
  // box-shadow: 0 4px 6px rgba(255,255,255,.9), 0 1px 3px rgba(255,255,255,.5);
  margin-top: 150px;
}
.login h2 {
  margin: 25px 0px 30px 0px;
}
.login-text {
  padding-left: 30px;
  padding-right: 30px;
  padding-top: 20px;
  padding-bottom: 20px;
}
